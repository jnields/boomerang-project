{
    "root": true,
    "env": {
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 6
    },
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [
                    ".js",
                    ".jsx",
                    ".json",
                    ".scss",
                    ".sass",
                    ".css"
                ]
            }
        },
        "import/ignore": [
            "\\.sass",
            "\\.scss",
            "\\.css",
            "src/client/workers/.*"
        ]
    }
}
